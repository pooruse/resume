%% Document header
\newcommand{\resheader}[4]{
    \begin{tabular*}{\textwidth}{l@{\extracolsep{\fill}}cr}
       & \textbf{\LARGE #1} &   \\ 
       & \url{#2}           &   \\
       & \url{#3}           &   \\ 
    \end{tabular*}
    \rule{\hsize}{0.1mm}
    #4 #5
    %\vspace{0.1in}
}

