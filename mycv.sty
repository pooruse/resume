\titlespacing*{\subparagraph}
{0pt}{.5ex}{.5ex}


\titleformat{\section} %command
            [block] %shape
            {\Large\bfseries\scshape} %format
            {} %label
            {0pt} %sep
            {} %before-code
            [] %after-code

\titleformat{\subsection} %command
            [block] %shape
            {\bfseries\large} %format
            {} %label
            {0pt} %sep
            {\setlength{\hsize}{145mm}} %before-code
            [] %after-code

%\titlespacing{\subsection}{0pt}{5pt}{0pt}[{0pt}]


\titleformat{\subsubsection} %command
            [block] %shape
            {\vspace{-4.0ex}\it\raggedleft} %format
            {} %label
            {0pt} %sep
            {} %before-code
            [] %after-code

%\titlespacing{\subsubsection}{0pt}{0pt}{0pt}[{0pt}]
            
\titleformat{\paragraph} %command
            [block] %shape
            {\bfseries} %format
            {} %label
            {0pt} %sep
            {\setlength{\hsize}{145mm}\hspace{1ex}} %before-code
            [] %after-code            

\titleformat{\subparagraph} %command
            [block] %shape
            {\vspace{-4.5ex}\it\raggedleft} %format
            {} %label
